<div>
    <% flash.each do |type, msg| %>
        <div class="alert alert-info">
            <%= msg %>
        </div>
    <% end %>
    <%= form_with url: "/sessions", method: "post" do |form| %>
        <%= form.text_field :email %>
        <%= form.password_field :password %>
        <%= form.submit "Login" %>
    <% end %>
</div>