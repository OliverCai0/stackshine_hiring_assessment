<div>
    <% flash.each do |type, msg| %>
        <div class="alert alert-info">
            <%= msg %>
        </div>
    <% end %>
    <%= form_with url: "/sessions", method: "post", class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" do |form| %>
        <div class= "mb-4">
            <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email address</label>
            <%= form.text_field :email , class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Enter email"%>
        </div>
        <div class= "form-group">
            <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
            <%= form.password_field :password , class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Password" %>
        </div>
        <div class="md:flex md:items-center">
            <div class="flex">
                <%= form.submit "Login" , class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"%>
            </div>
        </div>
    <% end %>
</div>